---
import Navbar from "../components/Navbar";
import "../index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-t from-black via-gray-900 to-gray-700 font-mono">
    <div class="fixed top-0 w-full backdrop-blur z-10">
      <Navbar client:load />
    </div>
    <slot />
  </body>
</html>
