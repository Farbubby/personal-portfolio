---
import Navbar from "../components/Navbar";
import "../index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.jpg" />
  </head>
  <body class="bg-gradient-to-t from-black via-gray-950 to-gray-800 font-mono">
    <Navbar client:load />
    <slot />
  </body>
</html>
