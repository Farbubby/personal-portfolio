---
import Navbar from "../components/Navbar";
import "../index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body class="bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gray-700 via-gray-900 to-black font-mono">
    <div class="fixed top-0 w-full backdrop-blur">
      <Navbar client:load />
    </div>
    <slot />
  </body>
</html>
