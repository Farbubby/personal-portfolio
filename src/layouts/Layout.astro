---
import Navbar from "../components/Navbar";
import "../index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta
      charset="UTF-8"
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>{title}</title>
    <link rel="icon" href="/favicon.jpg" />
  </head>
  <body class="bg-gray-950 font-mono">
    <Navbar client:load />
    <slot />
  </body>
</html>
