---
import Layout from "../layouts/Layout.astro";

let sandcolorText =
  " bg-gradient-to-r from-red-500 to-orange-400 text-transparent bg-clip-text";

let projects =
  " text-pink-950 bg-gradient-to-r from-red-500 to-orange-400 rounded-xl h-full shadow-lg p-10 ease-in-out hover:scale-105 hover:drop-shadow-glow duration-200";
---

<Layout title="Projects">
  <div class="mt-20 flex flex-col items-center">
    <div
      class={"text-4xl md:text-5xl drop-shadow-glow font-bold h-min p-1" +
        sandcolorText}>
      Projects
    </div>
    <div
      class="flex flex-col md:grid md:grid-cols-2 mt-10 gap-x-10 gap-y-10 w-1/2">
      <div class={projects}>Project1</div>
      <div class={projects}>Project2</div>
      <div class={projects}>Project3</div>
      <div class={projects}>Project4</div>
    </div>
  </div>
</Layout>
