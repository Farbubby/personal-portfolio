---
import Layout from "../layouts/Layout.astro";
import "../index.css";

let buttonStyle =
  "px-2 py-1 border border-orange-700 rounded-md hover:bg-orange-700 hover:text-white transition duration-200 ease-in-out";
---

<Layout title="Home">
  <div class="flex flex-col mt-20 items-center">
    <div class="text-2xl md:text-4xl">Welcome to my Website!</div>
  </div>
  <div
    class="flex flex-col md:flex-row justify-center items-center gap-20 mt-10">
    <div class={buttonStyle}>About Me</div>
    <div class={buttonStyle}>Projects</div>
  </div>
</Layout>
