---
import Layout from "../layouts/Layout.astro";

let sandcolorText =
  " bg-gradient-to-r from-red-500 to-orange-400 text-transparent bg-clip-text";

let projects =
  " text-pink-950 bg-gradient-to-r from-red-500 to-orange-400 rounded-xl p-4 ease-in-out hover:scale-105 hover:drop-shadow-glow duration-200 max-w-lg";
---

<script>
  const animateOnScroll = (elements: any) => {
    elements.forEach((element: any) => {
      if (element.isIntersecting) {
        element.target.classList.add("animate-fadeDown");
      } else {
        element.target.classList.remove("animate-fadeDown");
      }
    });
  };

  const observer = new IntersectionObserver(animateOnScroll);
  const elements = document.querySelectorAll(".animate-fadeDown");

  elements.forEach(function (target) {
    observer.observe(target);
  });
</script>

<Layout title="Portfolio">
  <div>
    <div
      id="home"
      class="flex flex-col h-screen justify-center mb-24 animate-fadeDown">
      <div
        class={"drop-shadow-glow font-bold px-4 text-center" + sandcolorText}>
        <div class="text-4xl md:text-5xl">Welcome to my portfolio!</div>
        <div class="text-xl md:text-2xl mt-8">
          <div>My name is</div>
          <div>Farhan Mahbub</div>
        </div>
      </div>
    </div>

    <div id="about" class="flex flex-col mb-24 animate-fadeDown">
      <div
        class={"text-4xl md:text-5xl drop-shadow-glow font-bold p-1 text-center" +
          sandcolorText}>
        About me
      </div>
      <div class="flex flex-col px-8 mt-10 items-center">
        <div class={"max-w-xl text-lg text-orange-300 drop-shadow-glow"}>
          <p class="mb-4">
            I am a student attending the University of Central Florida currently
            pursuing a major in Computer Science and a minor in Mathematics.
          </p>
          <p class="mb-4">
            My programming voyage started when I learned Java from one of my
            favorite teachers back in highschool, I then realized that I enjoyed
            programming and its endless problem-solving and creativity. Fast
            forward, I am passionate about learning new technologies and
            building projects..
          </p>
          <p>
            I am interested to get into software engineering. More specifically,
            I am interested in full-stack web development and machine learning
            as I also enjoy mathematics and statistics. I am currently learning
            React and Tailwind CSS which is what I used to create this website.
          </p>
        </div>
      </div>
    </div>

    <div id="projects" class="flex flex-col mb-24 animate-fadeDown">
      <div
        class={"text-4xl md:text-5xl drop-shadow-glow font-bold p-1 text-center" +
          sandcolorText}>
        Projects
      </div>
      <div class="flex flex-col items-center">
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-10 gap-x-10 gap-y-10 px-8">
          <a href="/projects/findmyprofessor" class={projects}>
            <div class="font-bold mb-3 text-xl">Find My Professor</div>
            <p class="mb-3">
              An app that provides a list of professors with average ratings,
              reviews, and adjective radar charts given a university name and a
              course code.
            </p>
            <div class="font-bold italic flex gap-4 max-w-sm">
              <div>Go</div>
              <div>GraphQL</div>
              <div>SQL</div>
              <div>PostgreSQL</div>
            </div>
          </a>

          <a href="/projects/stocksprediction" class={projects}>
            <div class="font-bold mb-3 text-xl">Stocks Prediction</div>
            <p class="mb-3">
              An LSTM model that predicts the closing price of a stock in one
              minute time intervals.
            </p>
            <div class="font-bold italic flex flex-wrap gap-x-4 max-w-sm">
              <div>Python</div>
              <div>TensorFlow</div>
              <div>Pandas</div>
              <div>NumPy</div>
              <div>yfinance</div>
            </div>
          </a>

          <a href="/projects/groceryapp" class={projects}>
            <div class="font-bold mb-3 text-xl">Grocery App</div>
            <p class="mb-3">
              An app that displays a selection of food items of different types
              and the user has to login to manage and checkout their cart.
            </p>
            <div class="font-bold italic flex flex-wrap gap-x-4 max-w-sm">
              <div>TypeScript</div>
              <div>React</div>
              <div>TailwindCSS</div>
              <div>Express</div>
              <div>Vite</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
