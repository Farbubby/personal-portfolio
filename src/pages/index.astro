---
import Layout from "../layouts/Layout.astro";

let buttonStyle =
  "px-2 py-1 border border-orange-700 rounded-md hover:bg-orange-400 hover:text-white transition duration-200 ease-in-out";

let sandcolorText = " bg-gradient-to-r from-red-700 to-orange-400 text-transparent bg-clip-text";
---

<Layout title="Home">
  <div class="mt-20 text-center">
    <div
      class={"text-4xl md:text-5xl drop-shadow-glow font-bold" + sandcolorText}>
      Welcome to my Website!
    </div>
  </div>
  <div
    class={"flex flex-col md:flex-row justify-center items-center gap-10 mt-14 drop-shadow-glow text-orange-300 " + sandcolorText}>
    <a href="/about" class={buttonStyle}>About Me</a>
    <a href="/projects" class={buttonStyle}>Projects</a>
    <a href="./public/Resume_FarhanMahbub.pdf" class={buttonStyle}>Resume</a>
  </div>
</Layout>
