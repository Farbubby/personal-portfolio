---
import Layout from "../layouts/Layout.astro";

let buttonStyle =
  "px-2 py-1 border border-orange-700 rounded-md hover:bg-orange-700 hover:text-white transition duration-200 ease-in-out";
---

<Layout title="Home">
  <div class="mt-20 text-center">
    <div class="text-2xl md:text-5xl drop-shadow-glow">Welcome to my Website!</div>
  </div>
  <div
    class="flex flex-col md:flex-row justify-center items-center gap-10 mt-14 drop-shadow-glow">
    <a href="/about" class={buttonStyle}>About Me</a>
    <a href="/projects" class={buttonStyle}>Projects</a>
    <div class={buttonStyle}>Resume</div>
  </div>
</Layout>
